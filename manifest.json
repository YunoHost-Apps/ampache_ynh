{
    "name": "Ampache",
    "id": "ampache",
    "packaging_format": 1,
    "description": {
        "en": "Web based audio/video streaming application",
        "fr": "Application de streaming audio et vidÃ©o"
    },
    "version": "5.2.0~ynh1",
    "url": "http://ampache.org",
    "license": "AGPL-3.0",
    "maintainer": {
        "name": "aymhce",
        "email": "aymhce@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 4.3.0"
    },
    "multi_instance": true,
    "services" : [
        "nginx",
        "php8.0-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/ampache",
                "default": "/ampache"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            }
        ]
    }
}
